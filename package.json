{
  "name": "strikeupdater",
  "version": "0.5.1",
  "description": "updater for various apps",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "win":{
    "icon": "./strike.ico"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WhistleDevelopments/StrikeUpdater.git"
  },
  "author": "WhistleDev",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/WhistleDevelopments/StrikeUpdater/issues"
  },
  "homepage": "https://github.com/WhistleDevelopments/StrikeUpdater#readme",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.57",
    "@electron-forge/maker-deb": "^6.0.0-beta.57",
    "@electron-forge/maker-rpm": "^6.0.0-beta.57",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.57",
    "@electron-forge/maker-zip": "^6.0.0-beta.57",
    "electron": "15.5.5"
  },
  "dependencies": {
    "colorfy": "^2.2.0",
    "electron-squirrel-startup": "^1.0.0",
    "fs": "^0.0.1-security",
    "http": "^0.0.1-security"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "strikeupdater"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
